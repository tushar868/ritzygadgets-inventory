<div class="content-box">
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead class="table__header">
                <tr>
                    <th>Date</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="table__body">
                <% if(locals.entries) {
                    entries.forEach((entry)=>{
                        if (entry.type == 'inventory' && entry.product) { %>
                <tr>
                    <td><%= entry.createdAt.toLocaleDateString(); %></td>
                    <td><%= entry.product.name; %></td>
                    <td><%= entry.quantity.toLocaleString(); %></td>
                    <td class="table__actions text-center" data-item-id="<%= entry._id %>">
                        <a href="#" class="table__actions-btn inventoryEditButton"
                            data-toggle="modal" data-target="#addInventory"><i
                                class="ic-pencil pr-2"></i>Edit</a>
                        <a href="#" class="table__actions-btn"
                            data-toggle="modal" data-target="#deleteModal"><i
                                class="ic-trash pr-2"></i>Delete</a>
                    </td>
                </tr>
                <% }})} %>
            </tbody>
        </table>
    </div>
</div>