<div class="overview card border-info text-uppercase">
    <div class="card-header bg-info border-info">
        <h2 class="h4 text-light text-center">
            Inventory
        </h2>
    </div>
    <div class="container mb-4">
        <div class="row justify-content-center text-center text-md-left">
            <div class="col-md-12">
                <div class="search-area mt-4 mt-md-5 mb-4">
                    <form action="/dashboard" method="get">
                        <div class="container">
                            <div class="row d-flex justify-content-center align-items-start">
                                <div class="col-lg-4 mb-3 mr-lg-3">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="ic-magnifying-glass"></i>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control"
                                               name="inventoryQuery"
                                               value="<% if(queryString.inventoryQuery){ %><%= queryString.inventoryQuery; %><% } %>"
                                               placeholder="Enter product Code "/>
                                    </div>
                                </div>
                                <div class="col-lg-7 d-flex align-items-start">
                                    <div class="input-group mr-4">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="ic-calendar"></i>
                                            </div>
                                        </div>
                                        <input type="date" class="form-control"
                                               name="startDateInventory"
                                               value="<% if(queryString.startDateInventory){ %><%= queryString.startDateInventory; %><% } %>"/>
                                        <input type="date" class="form-control"
                                               name="endDateInventory"
                                               value="<% if(queryString.endDateInventory){ %><%= queryString.endDateInventory; %><% } %>"/>
                                    </div>

                                    <button type="submit"
                                            class="btn btn-info mr-2" style="width: 33%;">
                                        <i class="ic-magnifying-glass"></i>
                                        Search
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-6 border-info text-center">
                <div class="card-body bg-light text-info">
                    <h3 class="display-5"><%= totalSalesUnits %></h3>
                    <h6 class="card-title text-muted">Total Sales (Unit)</h6>
                </div>
            </div>
        </div>
    </div>
</div>