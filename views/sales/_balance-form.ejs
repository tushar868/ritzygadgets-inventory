<div class="modal fade" id="addBalance" tabindex="-1" role="dialog"
    data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title t-primary">
                    Add Balance
                </h5>
                <button type="button" class="close" data-dismiss="modal"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/sales/add-balance" method="post">
                    <div class="form-group">
                        <label for="customer">Customer ID</label>
                        <span class="f-10 text-muted">(Can be
                            found on customer page)</span>
                        <input type="text"
                            class="form-control customer-input-query"
                            name="customer" placeholder="Eg. 01717998833"
                            maxlength="11" required autocomplete="off"/>
                        <ul class="list-group auto-suggestion customer-input-query-group"></ul>
                    </div>
                    <div class="form-group">
                        <label for="paid">Payment Amount</label>
                        <input type="number" class="form-control"
                            name="paid"
                            placeholder="New payment balance"
                            required />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                            data-dismiss="modal">
                            <i class="ic-cross"></i> Close
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="ic-check"></i> Save
                            Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>